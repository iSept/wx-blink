/* components/episode/index.wxss */
/* 组件里面要使用class选择器，不能使用id选择器 */
.container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx; /* 以最高的元素为基准 */
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline; /* 文字底部对齐 */
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx; /* 很重要 */
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1px solid #000;
}

.date-container {
  display: flex;
  flex-direction: column;
  height: 60rpx;
  margin-top: 5rpx;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
}

.year {
  font-size: 20rpx;
}
